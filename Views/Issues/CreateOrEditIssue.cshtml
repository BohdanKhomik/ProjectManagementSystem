@model Issue
@{
    ViewData["Title"] = "CreateOrEditIssue";
    var isCreate = Model.Id == 0;
}
<div class="modal fade" role="dialog" tabindex="-1" id="addIssue" aria-labelledby="addIssueLable" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content" style="background-color:#BFD7FF !important;">
            <div class="modal-header"><h3>Issue</h3></div>
            <div class="modal-body">
                <form asp-action="CreateOrEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ColumnId" class="control-label">Column</label>
                        <select asp-for="ColumnId" class="form-control" asp-items="@(new SelectList(ViewBag.ProjectColumns, nameof(ProjectColumn.Id), nameof(ProjectColumn.Name)))"></select>
                        <span asp-validation-for="ColumnId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SprintId" class="control-label">Sprint</label>
                        <select asp-for="SprintId" class="form-control" asp-items="@(new SelectList(ViewBag.Sprints, nameof(Sprint.Id), nameof(Sprint.Name)))"></select>
                        <span asp-validation-for="SprintId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EstimatedTime" class="control-label"></label>
                        <input asp-for="EstimatedTime" class="form-control" />
                        <span asp-validation-for="EstimatedTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EllapsedTime" class="control-label"></label>
                        <input asp-for="EllapsedTime" class="form-control" />
                        <span asp-validation-for="EllapsedTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedDate" class="control-label"></label>
                        <input asp-for="CreatedDate" class="form-control" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AssigneeUserId" class="control-label">Assign To User</label>
                        <select asp-for="AssigneeUserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, nameof(ApplicationUser.Id), nameof(ApplicationUser.UserName)))"></select>
                        <span asp-validation-for="AssigneeUserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReporterUserId" class="control-label"></label>
                        <select asp-for="ReporterUserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, nameof(ApplicationUser.Id), nameof(ApplicationUser.UserName)))"></select>
                        <span asp-validation-for="ReporterUserId" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-secondary" value="Cancel" data-dismiss="modal" />
                        <input type="submit" value="@(isCreate?"Create":"Edit")" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}