@model IEnumerable<GraduateWork.Models.Project>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="cont">
        @foreach (var item in Model)
        {
            <div class="wrapper">
                <a class="proj-link" asp-action="Board" asp-route-id="@item.Id">
                    <span class="projFill"></span>
                    <p class="innerText">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                </a>
            </div>
        }
        <div class="wrapper">
            <a class="proj-link" asp-action="CreateProject">
                <span class="projFill">
                    <svg width="115" height="115" viewBox="0 0 115 115" fill="none"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M49.5 0H64.8827V49.9906H114.5V64.9906H64.8827V114.991H49.7942V64.9906H0V49.9906H49.5V0Z"
                              fill="gray" />
                    </svg>
                </span>

                <p class="innerText">
                    Create new Project
                </p>
            </a>
        </div>

    </div>
